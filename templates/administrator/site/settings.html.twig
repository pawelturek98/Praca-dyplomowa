{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    <ul>
        <li>
            {{ 'app.navigation.site_settings' | trans }}
        </li>
    </ul>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    {{ 'app.navigation.site_settings' | trans }}
                </div>
                <div class="card-body">
                {{ form_start(settingsForm) }}
                    <div class="form-group">
                        {{ form_row(settingsForm.siteName) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(settingsForm.siteDescription) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(settingsForm.siteKeywords) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(settingsForm.enableRegistration) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(settingsForm.defaultRegistrationRole) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(settingsForm.enableForum) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(settingsForm.enableMessages) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(settingsForm.sendNotifications) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(settingsForm.favicon) }}
                    </div>
                    <div class="form-group text-right">
                        <button class="btn btn-success">
                            {{ 'app.save' | trans }}
                        </button>
                    </div>
                {{ form_end(settingsForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}