{% set paginationPath = app.request.attributes.get('_route') %}
{% if lastPage > 0 %}
<div class="row">
    <div class="col-12">
        <div class="card pagination">
            <div class="card-body text-right d-flex w-100">
                <div class="flex-column pages-info">
                    {{ 'app.pagination.page' | trans({'{currentPage}': paginator.currentPage, '{lastPage}': lastPage}) }}
                </div>
                <nav class="flex-column">
                    <ul class="pagination justify-content-end">
                        {% if paginator.currentPage > 1 %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path(paginationPath, {'page': paginator.currentPage - 1}) }}"
                                   tabindex="-1"
                                >
                                    <<
                                </a>
                            </li>
                        {% endif %}
                        {% for page in range(1, lastPage) %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path(paginationPath, {'page': page}) }}">
                                    {{ page }}
                                </a>
                            </li>
                        {% endfor %}
                        {% if paginator.currentPage < lastPage %}
                            <li class="page-item">
                                <a class="page-link"
                                   href="{{ path(paginationPath, {'page': paginator.currentPage + 1}) }}"
                                   tabindex="-1"
                                >
                                    >>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
{% endif %}
