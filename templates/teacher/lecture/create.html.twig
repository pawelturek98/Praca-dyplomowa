{% extends 'base.html.twig' %}

{% block breadcrumbs %}

{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    {{ 'app.course.lecture.create.title' | trans }}
                </div>
                <div class="card-body">
                    {{ form_start(lectureForm) }}
                    <div class="form-group mb-3">
                        {{ form_row(lectureForm.name) }}
                    </div>
                    <div class="form-group mb-3">
                        {{ form_row(lectureForm.type) }}
                    </div>
                    <div class="form-group content-type-input mb-3" id="lecture-text">
                        {{ form_row(lectureForm.contentText) }}
                    </div>
                    <div class="form-group content-type-input mb-3 display-hidden" id="lecture-video">
                        {{ form_row(lectureForm.contentUrl) }}
                    </div>
                    <div class="form-group content-type-input mb-3 display-hidden" id="lecture-pdf">
                        {{ form_row(lectureForm.contentFile) }}
                    </div>
                    {{ form_end(lectureForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}