{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    <ul>
        <li></li>
        <li></li>
        <li></li>
    </ul>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    {{ 'app.course.end_mark' | trans }}
                </div>
                <div class="card-body">
                    <p>
                        <strong>{{ 'app.course.proposed_mark' | trans }}</strong>
                        {{ courseStudent.marksDictionary.name | default('-') }} ({{ courseStudent.marksDictionary.importance | default('-') }})
                    </p>
                    {{ form_start(markForm, {'attr': {'class': 'row'}}) }}
                    <div class="form-group col-4">
                        {{ form_row(markForm.mark) }}
                    </div>
                    <div class="form-group col-3" style="padding-top: 33px">
                        <button class="btn btn-success" type="submit">
                            {{ 'app.save' | trans }}
                        </button>
                    </div>
                    {{ form_end(markForm) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    {{ 'app.navigation.course_list' | trans }}
                </div>
                <div class="card-body"></div>
            </div>
        </div>
    </div>
{% endblock %}
