<div class="card mt-4">
    <div class="card-header">
        {{ 'app.user.settings.password' | trans }}
    </div>
    <div class="card-body">
        {{ form_start(passwordForm) }}
        <div class="form-group">
            {{ form_row(passwordForm.oldPassword) }}
        </div>
        <div class="form-group">
            {{ form_row(passwordForm.password) }}
        </div>
        <div class="form-group">
            {{ form_row(passwordForm.passwordRepeat) }}
        </div>
        <div class="form-group text-right">
            <button class="btn btn-success" type="submit">{{ 'app.save' | trans }}</button>
        </div>
        {{ form_end(passwordForm) }}
    </div>
</div>
