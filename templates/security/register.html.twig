{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 col-sm-12 login-panel">
            <div class="card">
                <div class="card-header">{{ 'app.security.register' | trans }}</div>
                <div class="card-body">
                    {{ form_start(registrationForm) }}
                    {{ form_widget(registrationForm) }}

                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-success">{{ 'app.security.register' | trans  }}</button>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
